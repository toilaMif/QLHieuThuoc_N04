		panel_1.setOpaque(true);
		panel_1.setLayout(new BorderLayout());
		panel_1.setBackground(Color.WHITE);
		panel_1.setBorder(BorderFactory.createTitledBorder(BorderFactory.createLineBorder(new Color(180, 220, 85), 2),
